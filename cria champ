#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <time.h>
# define max 2
struct champ {
    int atk;
    int def ;
    int id ;
    int mp;
    int life;
} ;
int rd(){
    int soma,i ;
    soma =0;
        for(i=0;i<3;i++){
            soma += 1+ rand()%6;
       }


     return soma;
}
int carbonus(int carisma){
    int bonus;

    if (carisma == 18)
        bonus = 3;
        else if  (carisma >=16)
             bonus = 2;
            else if  (carisma >=14)
                 bonus = 1;
                else if  (carisma <=7)
                     bonus = -1;
                    else if  (carisma <=5)
                         bonus = -2;
                        else if  (carisma <=4)
                             bonus = - 3;

        else bonus = 0;
       // printf ("\n bonus  = %i",bonus );
        return bonus;
    }

void champe(champ *p,int id){
    int i , soma = 0;
    p->atk = rd();
    p->def = rd();
    p->id =id;
    p->mp = rd();

    for(i=0;i<3;i++){
     soma += rd();
    }
    p-> life = soma;
      printf("\n boneco %d id %d",id,p->id );
    printf("\n  boneco %d atk %d",id,p->atk );
    printf("\n  boneco %d def %d",id,p->def );
    printf("\n boneco %d mana %d",id,p->mp );
    printf("\n  boneco %d vida %d ",id,p->life );

}
void criachamp (champ p[max]){
    int i;
    for (i=0;i<max;i++){
        champe(&p[i],i);

    }
}
